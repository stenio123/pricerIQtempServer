<div class='container'>
  <h1><%- user.name %></h1>
  <% if (user.admin) { %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Admin
      <% } else { %>
        <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Regular user
      <% } %>  
  <h3><%- user.title %></h3>
  <hr>
  <h3>contact: <%- user.email %></h3>

  <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
</div>  